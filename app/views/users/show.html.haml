
- provide(:title, @user.name)

#content-users

  %h3
    = @user.name

  - if is_admin?(@user)
    %span.weight-bold Admin
    %br

  = show_gravatar @user

  %p

  %a{ :href => "http://gravatar.com/emails", :target => "_blank", :class => "button" } Edit Gravatar

  %p

  = link_to 'Edit Profile', { :action => "edit", :controller => "users"}, class: 'button'
  - if is_admin?(current_user) && !current_user?(@user)

    %p
    
    = link_to 'Delete Profile', user_path(@user),
                        method: :delete,
                        data: { confirm: 'Delete this member? This cannot be undone.' },
                        class: 'button'
