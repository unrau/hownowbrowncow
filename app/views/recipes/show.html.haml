
- provide(:title, @recipe.title)

#content-recipes

  %h4
    = link_to ("#{icon 'list-ol'} Chocolate Milk Recipes").html_safe, { :action => "index", :controller => "recipes"}

  %h3
    = @recipe.title

  %p
    = render_markdown(@recipe.text)

  - if logged_in? && is_admin?(current_user)
    = link_to ("#{icon 'pencil'} Edit").html_safe, { :action => "edit", :controller => "recipes"}, class: 'button'

    %p

    = link_to ("#{icon 'remove'} Delete").html_safe, recipe_path(@recipe),
                        method: :delete,
                        data: { confirm: 'Delete this recipe? This cannot be undone.' },
                        class: 'button'
