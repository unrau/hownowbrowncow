= form_for @recipe do |f|

  - if @recipe.errors.any?
    %ul
      - @recipe.errors.full_messages.each do |msg|
        %li.col-red
          %strong
            = msg

  = f.label :title

  %br
  
  = f.text_field :title, class: "text_field"

  %p

  = f.label :text

  %br

  = f.text_area :text, class: "text_field"

  %p

  = f.submit class: "button"
